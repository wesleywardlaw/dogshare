<%include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-2">
			<!-- <p class="lead">DogShare</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div> -->
		</div>
		<div class="col-md-8">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= dog.image %>">
				<div class="caption-full">
					<h4 class="pull-right"><%= dog.species %></h4>
					<h4><%= dog.name %></h4>
					<p><%= dog.description %></p>
					<p>
						<em>Submitted by <%= dog.author.username %></em>
					</p>
					<% if(currentUser && dog.author.id.equals(currentUser._id)){  %>
						<a class = "btn btn-warning btn-xs" href="/dogs/<%= dog._id %>/edit">Edit</a>
						<form class="delete-form" action = "/dogs/<%= dog._id %>?_method=DELETE" method="POST">
							<button class="btn btn-danger btn-xs">Delete</button>
						</form>
					<% } %>

				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/dogs/<%= dog._id %>/comments/new">Add New Comment</a>
				</div>
				<hr>
				<% dog.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right">10 days ago</span>
							<p>
								<%= comment.text %>
							</p>
							<% if(currentUser && comment.author.id.equals(currentUser._id)){  %>
								<a class="btn btn-xs btn-warning" href="/dogs/<%= dog._id %>/comments/<%= comment._id %>/edit">Edit</a>
								<form class="delete-form" action="/dogs/<%= dog._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
									<input type="submit" class="btn btn-xs btn-danger" value="Delete">
								</form>
							<% } %>


							</form>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>















<%include ../partials/footer %>